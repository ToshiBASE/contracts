contract Presale is Ownable {
    using SafeMath for uint256;

    uint256 constant private DECIMALS = 1e18;

    struct PresaleParams {
        uint256 presaleStartTime;
        uint256 presaleEndTime;
        uint256 tokenPrice;
        uint256 hardCap;
        uint256 softCap;
        uint256 minPurchase;
        uint256 maxPurchase;
        uint256 presaleTokens;
        uint256 refundType;
        uint256 liquidityPercent;
        uint256 listingPrice;
        uint256 listingTime;
    }

    PresaleParams public presaleParams;

    string[] public urls;
    mapping(address => uint256) public contributions;

    enum State {Inactive, Active, Successful, Failed}
    State public state;

    IERC20 public token;
    address public routerAddress;


    event TokensPurchased(address indexed buyer, uint256 amount, uint256 contribution);

    modifier onlyWhileActive() {
        require(state == State.Active && block.timestamp >= presaleParams.presaleStartTime && block.timestamp <= presaleParams.presaleEndTime, "Presale: Not active");
        _;
    }

    modifier onlyIfSuccessful() {
        require(state == State.Successful, "Presale: Not successful");
        _;
    }

    modifier onlyIfFailed() {
        require(state == State.Failed, "Presale: Not failed");
        _;
    }

   constructor(
    uint256[12] memory params, // Using an array to group parameters
    address _tokenAddress,
    address _routerAddress,
    string[] memory _urls
) {
       require(params[1] > params[0] && params[3] > 0 && params[4] > 0 && params[4] <= params[3], "Invalid parameters");
    require(params[5] > 0 && params[6] >= params[5] && params[7] > 0 && params[8] > 0 && _tokenAddress != address(0), "Invalid parameters");
    require(params[9] <= 1 && _routerAddress != address(0) && params[10] > 0 && params[10] <= 100 && params[11] > 0, "Invalid parameters");


    presaleParams = PresaleParams({
        presaleStartTime: params[0],
        presaleEndTime: params[1],
        tokenPrice: params[2],
        hardCap: params[3],
        softCap: params[4],
        minPurchase: params[5],
        maxPurchase: params[6],
        presaleTokens: params[7],
        refundType: params[8],
        liquidityPercent: params[9],
        listingPrice: params[10],
        listingTime: params[11]
    });

        routerAddress = address(_routerAddress);
        token = IERC20(_tokenAddress);
        state = State.Inactive;
        urls = _urls;
    }

    function startPresale() external onlyOwner {
        require(state == State.Inactive, "Presale: Already started");
        state = State.Active;
    }

    function purchaseTokens() external payable onlyWhileActive {
        uint256 tokensToPurchase = msg.value.mul(DECIMALS) / presaleParams.tokenPrice;
        require(tokensToPurchase > 0 && msg.value >= presaleParams.minPurchase && msg.value <= presaleParams.maxPurchase && address(this).balance.add(msg.value) <= presaleParams.hardCap, "Invalid purchase");

        token.transfer(msg.sender, tokensToPurchase);
        contributions[msg.sender] = contributions[msg.sender].add(msg.value);

        emit TokensPurchased(msg.sender, tokensToPurchase, msg.value);

        if (address(this).balance >= presaleParams.softCap && address(this).balance <= presaleParams.hardCap) {
            state = State.Successful;
        } else if (block.timestamp > presaleParams.presaleEndTime || address(this).balance > presaleParams.hardCap) {
            state = State.Failed;
        }
    }

    function claimRemainingFunds() external onlyIfFailed onlyOwner {
        require(address(this).balance > 0, "No remaining funds");
        payable(owner()).transfer(address(this).balance);
    }

    function withdrawTokens() external onlyIfSuccessful onlyOwner {
        require(token.balanceOf(address(this)) >= presaleParams.presaleTokens, "Insufficient tokens");
        token.transfer(owner(), presaleParams.presaleTokens);
    }
}
